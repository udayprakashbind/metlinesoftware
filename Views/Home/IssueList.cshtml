@model IEnumerable<StoreMgmt.Models.Issue>

@{
    ViewBag.Title = "IssueList";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}



@Html.Raw(@TempData["InsertMessage"])
@Html.Raw(@TempData["updateMessage"])
@Html.Raw(@TempData["DeleteMessage"])



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/datatables.min.js"></script>
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/Buttons-2.3.6/css/buttons.bootstrap5.css" rel="stylesheet" />





<script>

    $(document).ready(function () {
        $('#tbllist').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,

            }
        );
    });

</script>



@using (Html.BeginForm())
{
    <div class="row my-3">
        <div class="col-12">
            @Html.ActionLink("Add Issue", "AddIssue", null, new { @class = "btn btn-success btn-lg text-bold" })
        </div>

    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
        
                            <h3 class="card-title float-right">Issue list show </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tbllist" class="table table-bordered table-hover table-striped justify-content-center text-center">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Item Name</th>
                                        <th> Person Name</th>
                                        <th> Department</th>
                                        <th>Use For</th>
                                        <th> Serial No.</th>
                                        <th> Quantity</th>
                                        <th> Item Weight</th>
                                        <th> Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @{
                                        int i = 1;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@i</td>
                                                <td>@item.ddlItem</td>
                                                <td>@item.ddlPerson</td>
                                                <td>@item.ddlDept</td>
                                                <td>@item.useFor</td>
                                                <td>@item.serialNo</td>
                                                <td>@item.quantity</td>
                                                <td>@item.ItemWeight</td>
                                                <td>@item.date</td>
                                                <td><a href="@Url.Action("IssueDataEdit",new { id = item.Id })" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="@Url.Action("DeleteIssueData",new { id = item.Id })" class="btn btn-danger" style="width:50px"><i class="fas fa-solid fa-trash"></i></a></td>
                                            </tr>
                                            i++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>

    </section>


}
