@model IEnumerable<StoreMgmt.Models.Item_Model2>

@{
    ViewBag.Title = "Items2List";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}




<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/datatables.min.js"></script>





<link href="~/Scripts/DataTables/DataTables-1.13.4/css/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/Buttons-2.3.6/css/buttons.bootstrap5.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/Buttons-2.3.6/css/buttons.bootstrap4.css" rel="stylesheet" />


<script src="~/Scripts/DataTables/Buttons-2.3.6/js/dataTables.buttons.min.js"></script>
<script src="~/Scripts/DataTables/Buttons-2.3.6/js/buttons.bootstrap4.min.js"></script>

@*<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>*@

<script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>



<script>

    $(document).ready(function () {
        // document.title = 'Simple DataTable';
        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true


            }
        );
    });

</script>



@Html.Raw(@TempData["InsertMessage"])
@Html.Raw(@TempData["updateMessage"])
@Html.Raw(@TempData["DeleteMessage"])

@using (Html.BeginForm())
{

    <div class="row my-3">
        <div class="col-md-6">
            @Html.ActionLink("Add Items", "AddItems2", null, new { @class = "btn btn-success btn-lg text-bold float-left" })
        </div>

        <div class="col-md-6">
            @Html.ActionLink("<< Back", "ItemsMaster2", null, new { @class = "btn btn-dark btn-lg float-right" })

        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title float-right">Items List Show Bellow</h2>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example" class="table table-striped table-bordered text-center" cellspacing="0" width="100%">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Item Name</th>
                                        <th>Item Size</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        int i = 1;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@i</td>
                                                <td>@item.Name</td>
                                                <td>@item.Size</td>
                                                <td><a href="@Url.Action("ItemsRecordEdit",new { id = item.Id })" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="@Url.Action("DeleteItemsRecord",new { id = item.Id })" class="btn btn-danger" style="width:50px"><i class="fas fa-solid fa-trash"></i></a></td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>

            </div>



        </div>

    </section>
}

