@model StoreMgmt.Models.Person

@{
    ViewBag.Title = "DeletePerson";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}



    <section class="content mx-5 mt-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Are you sure you want to delete this?</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <div>
                                <h4> Person Data</h4>
                                <hr />
                                <dl>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.PersonName)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.PersonName)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Contact)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Contact)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Address)
                                    </dd>

                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> ||
                                @Html.ActionLink("Back", "PersonList", null, new { @class = "btn btn-success" })

                            </div>
                                }
                            </div>




                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

