@model StoreMgmt.Models.Department

@{
    ViewBag.Title = "DeleteDeptData";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}


<section class="content mt-3 mx-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Are you sure you want to delete this?</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">


                        <h4>Department Data</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.DepartmentName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DepartmentName)
                            </dd>

                        </dl>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> |
                                @Html.ActionLink("Back to List", "DeptList", null, new { @class = "btn btn-dark btn-lg" })
                            </div>
                        }
                    </div>

                </div>

            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>