@model IEnumerable<StoreMgmt.Models.jobdetail>

@{
    ViewBag.Title = "GetTotalCircleList";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}

<center><h2>Get Total Circle List</h2></center>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/datatables.min.js"></script>





<link href="~/Scripts/DataTables/DataTables-1.13.4/css/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/Buttons-2.3.6/css/buttons.bootstrap5.css" rel="stylesheet" />





<script>

    $(document).ready(function () {
        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,

            }
        );
    });

</script>



@using (Html.BeginForm())
{

    <div class="row my-3">


        <div class="col-md-12">
            @Html.ActionLink("<< Back", "Report", null, new { @class = "btn btn-dark btn-lg float-right" })

        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">

                            <h3 class="card-title float-right">Circle Data List </h3>
                        </div>
                        <div class="card-body">
                            <table id="example" class="table table-bordered table-hover justify-content-center text-center">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Grade</th>
                                        <th>Type</th>
                                        <th>Weight(kg.)</th>
                                        <th>Size(Inch)</th>
                                        <th>Thickness (mm)</th>
                                        <th>Remark</th>
                                        <th>Add from</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (@Model != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model)
                                            {


                                                if (item.CuttingWeight != "0")
                                                {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.Code</td>
                                                    <td>@item.JobType</td>
                                                    <td>@item.CuttingWeight</td>
                                                    <td>@item.Diameter</td>
                                                    <td>@item.Thickness</td>
                                                    <td>@item.remark</td>
                                                    <td>@item.AddFrom</td>
                                                </tr>
                                                        i++;
                                                    }
                                                }
                                            }


                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </section>
}


