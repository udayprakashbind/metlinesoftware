@model IEnumerable<StoreMgmt.Models.Blank_model>

@{
    ViewBag.Title = "BlankReport";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}


<center><h2>Blank Report</h2></center>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/datatables.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>

<script>

    $(document).ready(function () {
        // document.title = 'Simple DataTable';
        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,

                buttons: [
                    {
                        extend: 'excelHtml5',
                        title: 'Blank Data Report'
                    },
                    {
                        extend: 'pdfHtml5',
                        title: 'Blank Data Report'
                    },

                    {
                        extend: 'print',
                        title: 'Blank Data Report'
                    }

                ]

            }
        );
    });

</script>



<section class="content">
    <div class="container-fluid">
        <div class="row">


            <div class="col-12 mb-2 ">
                @Html.ActionLink("<< Back", "Report", null, new { @class = "btn btn-dark btn-lg float-right" })

            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">


                        <table id="example" class="table table-striped table-bordered text-center" cellspacing="0" width="100%">

                            <thead>
                                <tr class="bg-primary">
                                    <th>Sr.No.</th>
                                    <th>Grade</th>
                                    <th>Blank Name</th>
                                    <th>Thickness</th>
                                    <th>Size (Inch)</th>
                                    <th>Weight (kg.)</th>
                                    <th>remark</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.Code</td>
                                            <td>@item.BlankName</td>
                                            <td>@item.Thickness</td>
                                            <td>@item.Width</td>
                                            <td>@item.Weight</td>
                                            <td>@item.remark</td>
                                        </tr>
                                        i++;
                                    }
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
