@model StoreMgmt.Models.ItemsModel
@using System.Data
@using System.Data.SqlClient

@{
    ViewBag.Title = "ItemDataEdit";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}

<h2>ItemDataEdit</h2>


@using (Html.BeginForm("ItemDataEdit", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

<section class="content mt-3">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">General</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="inputName">Item Name</label>
                        <input type="text" id="inputName" value="@Model.ItemName" name="ItemName" class="form-control">
                        @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label for="inputName">Item Details</label>
                        <input type="text" id="inputName" value="@Model.ItemDetails" name="ItemDetails" class="form-control">
                        @Html.ValidationMessageFor(model => model.ItemDetails, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label for="inputItemCode">Item Code </label>
                        <input type="text" id="inputName" value="@Model.ItemCode" name="ItemCode" class="form-control">
                        @Html.ValidationMessageFor(model => model.ItemCode, "", new { @class = "text-danger" })

                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto  h-100 d-flex align-items-center justify-content-center">
            <a href="@Url.Action("ItemList")" style="width:200px;" class="btn btn-secondary btn-lg">Cancel</a>
            &nbsp;&nbsp; &nbsp;&nbsp;   &nbsp;&nbsp; &nbsp;&nbsp;
            <input type="submit" style="width:200px" value="Update" class="btn btn-success btn-lg ">
        </div>
    </div>
</section>
}