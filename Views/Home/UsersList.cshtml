<script>

    $(document).ready(function () {

        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true


            }
        );

    });

</script>


<center><h2>User List</h2></center>

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-12 mb-2 ">
                @Html.ActionLink("Add Users", "AddUsers", null, new { @class = "btn btn-success btn-lg text-bold float-left" })

            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">

                        <table id="example" class="table table-striped table-bordered text-center" cellspacing="0" width="100%">

                            <thead>
                                <tr class="bg-primary">
                                    <th>Sr.No.</th>
                                    <th>User Name</th>
                                    <th>Mobile Number</th>
                                    <th> Department</th>
                                    <th> Role</th>
                                    <th> Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    int i = 1;
                                    foreach (var item in Model)
                                    {

                                                                <tr>
                                                                    <td>@i</td>
                                                                    <td>@item.username</td>
                                                                    <td>@item.mobile</td>
                                                                    <td>@item.department</td>
                                                                    <td>@item.RoleName</td>
                                                                    <td><a href="@Url.Action("UserDataEdit",new { id = item.Id })" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="@Url.Action("DeleteUsersRecord",new { id = item.Id })" class="btn btn-danger" style="width:50px"><i class="fas fa-solid fa-trash"></i></a></td>
                                                                </tr>
                                        i++;
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
