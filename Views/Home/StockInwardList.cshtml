@model IEnumerable<StoreMgmt.Models.StockInward>

@{
    ViewBag.Title = "StockInwardList";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}



@Html.Raw(@TempData["InsertMessage"])
@Html.Raw(@TempData["updateMessage"])
@Html.Raw(@TempData["DeleteMessage"])




<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/datatables.min.js"></script>
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/Buttons-2.3.6/css/buttons.bootstrap5.css" rel="stylesheet" />





<script>

    $(document).ready(function () {
        $('#tbllist').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,

            }
        );
    });

</script>


@using (Html.BeginForm())
{
    <div class="row my-3">
        <div class="col-12">
            @Html.ActionLink("Add Stock Inward", "AddStockInward", null, new { @class = "btn btn-success btn-lg text-bold" })
        </div>

    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                           
                            <h3 class="card-title float-right">Data List of StockInward</h3>
                        </div>
                        <div class="card-body">
                            <table id="tbllist" class="table table-bordered table-hover table-striped justify-content-center text-center">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Vendor Name</th>
                                        <th>Item Name</th>
                                        <th> Person Name</th>
                                        <th> Quantity</th>
                                        <th> Item Weight</th>
                                        <th> Rate</th>
                                        <th> Remark</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@i</td>
                                                <td>@item.ddlVendor</td>
                                                <td>@item.ddlItem</td>
                                                <td>@item.ddlPerson</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.ItemWeight</td>
                                                <td>@item.Rate</td>
                                                <td>@item.Remark</td>
                                                <td>@item.Date</td>
                                                <td><a href="@Url.Action("StockInwardDataEdit",new { id = item.Id })" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="@Url.Action("DeleteStockInwardData",new { id = item.Id })" class="btn btn-danger" style="width:50px"><i class="fas fa-solid fa-trash"></i></a></td>
                                            </tr>
                                            i++;
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>


}
