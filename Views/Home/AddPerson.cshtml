@model StoreMgmt.Models.Person


@{
    ViewBag.Title = "AddPerson";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}

<div class="row my-2">
    <div class="col-md-10">
        @Html.ActionLink("Show List", "PersonList", null, new { @class = "btn btn-info btn-lg text-bold" })

    </div>
</div>


@using (Html.BeginForm("AddPerson", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <section class="content  mt-3 " id="AddPerson">

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Person</h3>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Person Name</label>
                            <input type="text" id="inputName" name="PersonName" class="form-control">
                            @Html.ValidationMessageFor(model => model.PersonName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="inputName">Person Contact</label>
                            <input type="text" id="inputName" name="Contact" class="form-control">
                            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Person Address </label>
                            @* <input type="text" name="Address" id="inputAddress" class="form-control" />*@
                            <textarea id="inputDescription" name="Address" class="form-control" rows="4"></textarea>
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mx-auto  h-100 d-flex align-items-center justify-content-center">
                <a href="@Url.Action("PersonMaster")" style="width:200px;" class="btn btn-secondary btn-lg">Cancel</a>
                &nbsp;&nbsp; &nbsp;&nbsp;   &nbsp;&nbsp; &nbsp;&nbsp;
                <input type="submit" style="width:200px" value="Save" class="btn btn-success btn-lg ">
            </div>
        </div>
    </section>
}