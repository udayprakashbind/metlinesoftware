@model IEnumerable<StoreMgmt.Models.Coil_model>

@{
    ViewBag.Title = "CoilList";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}

@Html.Raw(@TempData["InsertMessage"])
@Html.Raw(@TempData["updateMessage"])
@Html.Raw(@TempData["DeleteMessage"])



<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<link href="~/Scripts/DataTables/datatables.min.css" rel="stylesheet" />

<script src="~/Scripts/DataTables/datatables.min.js"></script>





<link href="~/Scripts/DataTables/DataTables-1.13.4/css/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/DataTables-1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTables/Buttons-2.3.6/css/buttons.bootstrap5.css" rel="stylesheet" />





<script>

    $(document).ready(function () {
        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,

            }
        );
    });

</script>


@using (Html.BeginForm())
{
    <div class="row my-3">
        <div class="col-md-6">
            @Html.ActionLink("Add Coil", "AddCoil", null, new { @class = "btn btn-success btn-lg text-bold float-left" })
        </div>

        <div class="col-md-6">
            @Html.ActionLink("<< Back", "CircleCuttingMaster", null, new { @class = "btn btn-dark btn-lg float-right" })

        </div>

    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            @*@using (Html.BeginForm("CoilList", "Home", FormMethod.Get))
                                {
                                    <b>Search By :</b>@Html.RadioButton("SearchBy", "Code", true)<text>Code</text>
                                    @Html.RadioButton("SearchBy", "Name")<text>Name</text>
                                    <br />
                                    @Html.TextBox("search")<button type="submit"> <i class="fa fa-search" aria-hidden="true"></i></button>
                                }*@

                            <h3 class="card-title float-right">Coils list show below</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example" class="table table-bordered table-hover table-striped justify-content-center text-center">

                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Code</th>
                                        <th>Coil Name</th>
                                        <th>Thickness</th>
                                        <th>width</th>
                                        <th>Weight</th>
                                            <th>Remark</th>
                                        <th>Add  From</th>
                                        <th>Date</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (@Model != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model)
                                            {
                                                if (item.Weight != "0")
                                                {

                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Code</td>
                                                        <td>@item.CoilName</td>
                                                        <td>@item.Thickness</td>
                                                        <td>@item.Width</td>
                                                        <td>@item.Weight</td>
                                                          <td>@item.remark</td>
                                                          <td>@item.AddFrom</td>
                                                          <td>@item.Date</td>
                                                        <td><a href="@Url.Action("CoilDataEdit", new { id = item.Id })" class="btn btn-success" style="width:50px"><i class="fas fa-edit"></i></a> || <a href="@Url.Action("DeleteCoilData", new { id = item.Id })" class="btn btn-danger" style="width:50px"> <i class="fas fa-solid fa-trash"></i></a></td>
                                                    </tr>
                                                    i++;

                                                }
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8"> Data list Empty</td>
                                            </tr>

                                        }

                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>

        </div>

    </section>
}
