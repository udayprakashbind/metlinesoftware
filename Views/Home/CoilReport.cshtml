<script type="text/javascript">
    $(document).ready(function () {



        $('table tbody tr').click(function () {
            var coilCode = $(this).data('coilcode');

         //   alert(coilCode);
           // alert(typeof coilCode);
            $("#myModal").on("hidden.bs.modal", function () {
                var myTable = $('#itemHistory').DataTable();
                myTable.destroy();
            });


            var url = '/Home/GetCoilDetailByCode/' + coilCode;
            $.ajax(url, {
                dataType: 'json',
                type: "GET",
                timeout: 500,
                success: function (data, status, xhr) {
                    //console.log(typeof data);

                    var tableString = null;

                    var i = 0;

                    $.each(data, function (index, value) {
                        if (value.Weight != 0) {


                            i++;
                            tableString += '<tr>';
                            tableString += '<td>' + i + '</td>';
                            tableString += '<td>' + value.Code + '</td>';
                            tableString += '<td>' + value.remark + '</td>';
                            tableString += '<td>' + value.CoilName + '</td>';
                            tableString += '<td>' + value.Thickness + '</td>';
                            tableString += '<td>' + value.Width + '</td>';
                            tableString += '<td>' + value.Weight + '</td>';
                            tableString += '</tr>';
                        }
                    });

                    $('#myModal').find('.tableContent').html(tableString);
                    var myTable = $('#itemHistory').DataTable({
                        buttons: ['pdf']

                    });
                    myTable.draw();
    
                    $('#myModal').modal('show');



                },
                error: function (jqXhr, textStatus, errorMessage) {
                }
            });
        });



    });
</script>









<script>

    $(document).ready(function () {
        // document.title = 'Simple DataTable';
        $('#example').DataTable(
            {
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,

                buttons: [
                    {
                        extend: 'excelHtml5',
                        title: 'Coil Data Report'
                    },
                    {
                        extend: 'pdfHtml5',
                        title: 'Coil Data Report'
                    },

                    {
                        extend: 'print',
                        title: 'Coil Data Report'
                    },
                    {

                        extend: 'colvis',

                    }

                ]

            }
        );
    });

</script>


<section class="content">
    <div class="container-fluid">
        <div class="row">


            <div class="col-12 mb-2 ">
                @Html.ActionLink("<< Back", "Report", null, new { @class = "btn btn-dark btn-lg float-right" })

            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">

                        <table id="example" class="table table-striped table-bordered text-center" cellspacing="0" width="100%">

                            <thead>
                                <tr class="bg-primary">
                                    <th>Sr.No.</th>
                                    <th>Grade</th>
                                    <th>Coil Name</th>
                                    <th>Remark</th>
                                    <th>Total Weight</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (@Model != null)
                                    {
                                        int i = 1;
                                        foreach (var item in Model)
                                        {
                                            if (item.InitialWeight != "0")
                                            {
                                            <tr class="coilrow" data-coilcode="@item.Code">
                                                <td>@i</td>
                                                <td>@item.Code</td>
                                                <td>@item.CoilName</td>
                                                <td>@item.remark</td>
                                                <td>@item.InitialWeight</td>
                                            </tr>

                                                    i++;
                                                }
                                            }
                                        }
                                        else
                                        {
                                        <tr>
                                            <td colspan="5"> Data list Empty</td>
                                        </tr>


                                    }

                                    }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


<div class="modal" id="myModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

            <div class="modal-header">
                <center>  <h4 class="modal-title">Coil History</h4></center>

                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">

                <table class="table table-striped" id="itemHistory">
                    <thead>
                        <tr class="bg-primary">
                            <th>Sr.No.</th>
                            <th>Grade</th>
                            <th>Remark</th>
                            <th>Coil Name</th>
                            <th>Thickness</th>
                            <th>width</th>
                            <th> Weight</th>
                        </tr>
                    </thead>

                    <tbody class="tableContent">
                    </tbody>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
