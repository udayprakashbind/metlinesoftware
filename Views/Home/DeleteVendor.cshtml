@model StoreMgmt.Models.Vendor

@{
    ViewBag.Title = "DeleteVendor";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}
<center>
    <section class="content mt-3 mx-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Are you sure you want to delete this?</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <h4>Selected Vendor</h4>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.VendorName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VendorName)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.VendorContact)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VendorContact)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.VendorAddress)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.VendorAddress)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger" /> ||
                                    @Html.ActionLink("Back", "VendorList", null, new { @class = "btn btn-success" })

                                </div>
                            }





                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
</center>