
@{
    ViewBag.Title = "PermissionAllow";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}

<div class="row my-2">
    <div class="col-md-10">
        @Html.ActionLink("Show Allowed Permission List", "RolePermissionList", null, new { @class = "btn btn-info btn-lg text-bold" })

    </div>
</div>

@Html.Raw(@TempData["CheckExistMessage"])


@using (Html.BeginForm("PermissionAllow", "Home", FormMethod.Post))
{


    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">

                            <h3 class="card-title float-right">Permission list show below</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputStatus">Select Role</label>
                                @*  @Html.DropDownList("UserName", ViewBag.UserList as SelectList, "Select User", htmlAttributes: new { @class = "form-control  custom-select" })*@
                                @Html.DropDownList("Role_Id", ViewBag.rolelist as SelectList, "Select Role", htmlAttributes: new { @class = "form-control  custom-select" })

                            </div>
                            <table id="example2" class="table table-bordered table-hover table-striped justify-content-center text-center">
                                <thead>
                                    <tr class="bg-primary">
                                        <th>Sr.No.</th>
                                        <th>Permission Name</th>
                                        <th>Access Allow</th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @{
                                        int i = 1;
                                        foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>@i</td>
                                                <td>@item.PermissionName</td>
                                                <td>  <input type="checkbox" name="Permission_Id[]" value="@item.Id"></td>

                                            </tr>
                                            i++;
                                        }
                                    }



                                </tbody>

                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>

        @*<div class="row mb-3">
                <div class="col-6">
                    @Html.ActionLink("<<Back", "CircleCuttingMaster", null, new { @class = "btn btn-dark btn-lg text-bold" })

                </div>

            </div>*@

        <div class="row my-2">
            <div class="col-md-10">
                <input type="submit" style="width:200px" value="Save" class="btn btn-success btn-lg ">

            </div>
        </div>
    </section>
}