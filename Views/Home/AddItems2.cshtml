@model StoreMgmt.Models.Item_Model2

@{
    ViewBag.Title = "AddItems2";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}




<div class="row my-2">
    <div class="col-md-10">
        @Html.ActionLink("Show List", "Items2List", null, new { @class = "btn btn-info btn-lg text-bold" })

    </div>
</div>


@using (Html.BeginForm("AddItems2", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <section class="content mt-3" id="AddItems2">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Items</h3>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Item Name</label>
                            <input type="text" id="Name" name="Name" class="form-control">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="inputName">Item Size</label>
                            <input type="text" id="Size" name="Size" class="form-control">
                            @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 mx-auto  h-100 d-flex align-items-center justify-content-center">
                <a href="@Url.Action("ItemsMaster2")" style="width:200px;" class="btn btn-secondary btn-lg">Cancel</a>
                &nbsp;&nbsp; &nbsp;&nbsp;   &nbsp;&nbsp; &nbsp;&nbsp;
                <input type="submit" style="width:200px" value="Save" class="btn btn-success btn-lg ">
            </div>
        </div>

    </section>
}
