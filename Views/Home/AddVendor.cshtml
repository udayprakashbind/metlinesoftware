@model StoreMgmt.Models.Vendor
@{
    ViewBag.Title = "AddVendor";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}

<div class="row my-2">
    <div class="col-md-10">
        @Html.ActionLink("Show List", "VendorList", null, new { @class = "btn btn-info btn-lg text-bold" })

    </div>
</div>

@using (Html.BeginForm("AddVendor", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <section class="content mt-3" id="PersonMaster">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Vendor</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">Vendor Name</label>
                            <input type="text" id="inputName" name="VendorName" class="form-control">
                            @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="inputName">Vendor Contact</label>
                            <input type="text" id="inputName" name="VendorContact" class="form-control">
                            @Html.ValidationMessageFor(model => model.VendorContact, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Vendor Address </label>
                            <textarea id="inputDescription" name="VendorAddress" class="form-control" rows="4"></textarea>
                            @Html.ValidationMessageFor(model => model.VendorAddress, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 mx-auto  h-100 d-flex align-items-center justify-content-center">
                <a href="@Url.Action("VendorMaster")" style="width:200px;" class="btn btn-secondary btn-lg">Cancel</a>
                &nbsp;&nbsp; &nbsp;&nbsp;   &nbsp;&nbsp; &nbsp;&nbsp;
                <input type="submit" style="width:200px" value="Save" class="btn btn-success btn-lg ">
            </div>
        </div>

    </section>
}