<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin| Dashboard</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/FrontEnd/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/FrontEnd/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/FrontEnd/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/FrontEnd/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/FrontEnd/plugins/summernote/summernote-bs4.min.css">


    <script src="~/FrontEnd/plugins/jquery/jquery.min.js"></script>
    <script src="~/FrontEnd/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>$.widget.bridge('uibutton', $.ui.button)</script>
    <script src="~/FrontEnd/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/FrontEnd/plugins/chart.js/Chart.min.js"></script>
    <script src="~/FrontEnd/plugins/sparklines/sparkline.js"></script>
    <script src="~/FrontEnd/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/FrontEnd/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <script src="~/FrontEnd/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/FrontEnd/plugins/moment/moment.min.js"></script>
    <script src="~/FrontEnd/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/FrontEnd/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/FrontEnd/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/FrontEnd/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/FrontEnd/dist/js/adminlte.js"></script>
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />


</head>
<body class="hold-transition  sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav"> 
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"> <i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index")" class="nav-link">Home</a>
                </li>
            </ul>

        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo --> 
            <a href="#" class="brand-link">
                <img src="~/FrontEnd/dist/img/logo-mob.png" alt="Macreel Logo" class="brand-image elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Macreel</span>
            </a>

            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/FrontEnd/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="@Url.Action("Index")" class="d-block">Mr.@Session["username"].ToString()</a>
                        <h4 class="d-block">@Session["Role"].ToString()</h4>
                    </div>
                </div>

                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <nav class="mt-2"> 
                    
                    <ul class="nav nav-sidebar mb-5 nav nav-pills  flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a href="@Url.Action("Index")" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Segment A
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                @{
                                    foreach (var rp in Session["rplist"] as List<StoreMgmt.Models.RolePermission>)
                                    {
                                        if (rp.PermissionName == "Person Master")
                                        {

                                            <li class="nav-item">
                                                <a href="@Url.Action("PersonMaster")" class="nav-link">
                                                    <i class="fa fa-users" aria-hidden="true"></i>
                                                    <p>Person Master</p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "Vendor Master")
                                        {

                                            <li class="nav-item">
                                                <a href="@Url.Action("VendorMaster")" class="nav-link">
                                                    <i class="fa fa-user-secret" aria-hidden="true"></i>
                                                    <p>Vendor Master</p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "Department")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("DepartmentMaster")" class="nav-link">
                                                    <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                                                    <p>Deparment Master</p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "StockInward")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("AddStockInward")" class="nav-link">
                                                    <i class="fa fa-bullseye" aria-hidden="true"></i>
                                                    <p>Stock Inward</p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "StockInwardReport")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("StockInwardReport")" class="nav-link">
                                                    <i class="fa fa-folder-open" aria-hidden="true"></i>
                                                    <p>Item Stock  Report</p>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@Url.Action("itemavailabilityReport")" class="nav-link">
                                                    <i class="fa fa-folder-open" aria-hidden="true"></i>
                                                    <p>Item availability  Report</p>
                                                </a>
                                            </li>
                                        }

                                        else if (rp.PermissionName == "Item Master")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("ItemMaster")" class="nav-link">
                                                    <i class="fa fa-ship" aria-hidden="true"></i>
                                                    <p>Item Master</p>
                                                </a>
                                            </li>
                                        }

                                        else if (rp.PermissionName == "Issue")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("AddIssue")" class="nav-link">
                                                    <i class="fa fa-flag" aria-hidden="true"></i>
                                                    <p>Item Issue</p>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@Url.Action("IssueItemReportByItem")" class="nav-link">
                                                    <i class="fa fa-file" aria-hidden="true"></i>
                                                    <p>Item Issue  Report</p>
                                                </a>
                                            </li>
                                        }

                                    }
                                }
                            </ul>
                        </li>




                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Segment B
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @{
                                    foreach (var rp in Session["rplist"] as List<StoreMgmt.Models.RolePermission>)
                                    {

                                        if (rp.PermissionName == "Raw Invert")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("CircleCuttingMaster")" class="nav-link">
                                                    <p>
                                                        <i class="fa fa-anchor" aria-hidden="true"></i>
                                                        Raw Invert
                                                    </p>
                                                </a>
                                            </li>

                                        }
                                        else if (rp.PermissionName == "Create Job")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("CreateJob")" class="nav-link">
                                                    <i class="fa fa-cogs" aria-hidden="true"></i>
                                                    <p>Create Job</p>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@Url.Action("joblist")" class="nav-link">
                                                    <i class="fa fa-cogs" aria-hidden="true"></i>
                                                    <p>Show Job List</p>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@Url.Action("JobReport")" class="nav-link">
                                                    <i class="fa fa-book" aria-hidden="true"></i>
                                                    <p>Job Report</p>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@Url.Action("JobScrapReport")" class="nav-link">
                                                    <i class="fa fa-file" aria-hidden="true"></i>
                                                    <p>Job Scrap Report</p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "Items2")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("ItemsMaster2")" class="nav-link">
                                                    <i class="fa fa-beer" aria-hidden="true"></i>
                                                    <p>Items Master 2 </p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "Polishing")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("IssuePolishing")" class="nav-link">
                                                    <i class="fa fa-building" aria-hidden="true"></i>
                                                    <p>Issue Polishing</p>
                                                </a>
                                            </li>

                                            <li class="nav-item">
                                                <a href="@Url.Action("PolishScrapReport")" class="nav-link">
                                                    <i class="fa fa-book" aria-hidden="true"></i>
                                                    <p>Polish Scrap Report</p>
                                                </a>
                                            </li>

                                            <li class="nav-item">
                                                <a href="@Url.Action("SellOutWard")" class="nav-link">
                                                    <i class="fa fa-book" aria-hidden="true"></i>
                                                    <p>Sell OutWard</p>
                                                </a>
                                            </li>

                                        }
                                    }
                                }
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Segment C
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @{
                                    foreach (var rp in Session["rplist"] as List<StoreMgmt.Models.RolePermission>)
                                    {


                                        if (rp.PermissionName == "SellingItem")
                                        {
                                            <li class="nav-item">
                                                                                <a href="@Url.Action("SellOutWard")" class="nav-link">
                                                                                    <i class="fa fa-ambulance fa-flip-horizontal"></i>
                                                                                    <p>Sell OutWard</p>
                                                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="@Url.Action("SellOutWardList")" class="nav-link">
                                                    <i class="fa fa-book" aria-hidden="true"></i>
                                                    <p>Show Sold Item List</p>
                                                </a>
                                            </li>
                                        }

                                    }
                                }

                            </ul>
                        </li>



                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Segment D
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @{
                                    foreach (var rp in Session["rplist"] as List<StoreMgmt.Models.RolePermission>)
                                    {


                                        if (rp.PermissionName == "Create User")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("AddUsers")" class="nav-link">
                                                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                                                    <p>  User </p>
                                                </a>
                                            </li>
                                        }
                                        else if (rp.PermissionName == "RolePermission")
                                        {
                                            <li class="nav-item">
                                                <a href="@Url.Action("PermissionAllow")" class="nav-link">
                                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                                    <p>Permission Allow </p>
                                                </a>
                                            </li>
                                        }
                                    }
                                }

                            </ul>
                        </li>





                        @{
                            foreach (var rp in Session["rplist"] as List<StoreMgmt.Models.RolePermission>)
                            {



                                if (rp.PermissionName == "Report")
                                {
                                    <li class="nav-item">
                                        <a href="@Url.Action("Report")" class="nav-link">
                                            <i class="fa fa-folder" aria-hidden="true"></i>
                                            <p>Report</p>
                                        </a>
                                    </li>

                                }


                            }

                        }
                        <li class="nav-item">

                            <a href="@Url.Action("ChangePassword")" class="nav-link">
                                <i class="fa fa-key" aria-hidden="true"></i>
                                <p>Change Password</p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("LogOut")" class="nav-link">
                                <i class="fa fa-power-off" aria-hidden="true"></i>
                                <p>Logout</p>
                            </a>
                        </li>

                    </ul>
                    
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                  
                </div>
            </div>
            <section class="content">
                @RenderBody()
            </section>
</div>


        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2023 <a href="#">Macreel Web & Development</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.2.0
            </div>
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <script src="~/Scripts/chosen.jquery.js"></script>

</body>
</html>

